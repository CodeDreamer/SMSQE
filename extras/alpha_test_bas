10 REMark RUN IN 4 COLOUR MODE
100 FOR x = 0 TO 255
110 ALPHA_BLEND x
120 PAPER 2:CLS:INK 7:PAPER 1
130 BLOCK 50,50,50,50,3
140 BLOCK 50,50,50,100,250
150 PR_TEXT 0,0
160 PR_TEXT 1,0
170 PR_TEXT 0,1
180 PR_TEXT 1.1
190 PR_TEXT 2,0
200 PR_TEXT 2,1
210 INK 5,0:FILL 1:CIRCLE 60,60,30
220 PAUSE 10
230 END FOR x
240 :
250 DEFine PROCedure PR_TEXT(a,b)
260   CSIZE a,b
270   UNDER 0:OVER 0:PRINT x;" ";
280   UNDER 1:OVER 1:PRINT x;" ";
290   UNDER 1:OVER 0:PRINT x
300 END DEFine
