1620 DEFine PROCedure read_datas (line_number)
1630 REMark this reads the datas as of the line number given as params
1640 REMark and puts them in the global array delete$
1650 LOCal lp%,a$
1660   DIM delete$(100,100)
1670   RESTORE line_number                   : REMark start reading from here
1680   PRINT "restoring : ";line_number
1690   FOR lp% = 0 TO 100
1700     READ a$                             : REMark get filename
1710     IF a$ ="":EXIT lp%                  : REMark finished
1720     delete$(lp%)="dev8_"&a$
1730   END FOR lp%
1740 END DEFine read_datas
1750 :
1760 DEFine PROCedure delete_files
1770 REMark delete all files held in delete$
1780 LOCal stop_here%,lp%
1790   stop_here%=DIMN(delete$,1)
1800   FOR lp%=0 TO stop_here%
1810     IF delete$(lp%)="":EXIT lp%
1820     DELETE delete$(lp%)
1830   END FOR lp%
1840 END DEFine delete_files
1850 :
1860 DEFine PROCedure sa
1870   SAVE_O dev8_extras_del_all_bas
1880 END DEFine sa
1890 :
1900 DEFine PROCedure delete_files_with_extension(ext$,mdir$,ddown%)
1910 REMark this deletes all files in the dir mdir$ with the extension ext$
1920 REMark possibly drilling down to all subirs(ddown%<>0) to do the same there
1930 REMark by calling itself recursively
1940 LOCal chan%,lp%,myfile$,a$,device$,t%,exlen%
1950   FOR lp%=1 TO 50
1960     myfile$="ram1_dele_extns"&RND(1 TO 80)&RND (1 TO 80) & RND (1 TO 50)
1970     chan%=FOP_OVER (myfile$)            : REMark try to open unique file
1980     IF chan%>0:EXIT lp%
1990   END FOR lp%
2000   IF chan%<0:RETurn                     : REMark ooops!!!!
2010   exlen%=LEN(ext$)
2020   device$=mdir$(1 TO 5)
2030   WDIR#chan%,mdir$                      : REMark dir of this rep in file
2040   GET#chan%\0                           : REMark reset file pointer to start
2050   REPeat lp%
2060     IF EOF(#chan%):EXIT lp%
2070     INPUT#chan%,a$                      : REMark get filename
2080     IF a$="":NEXT lp%
2090     a$=device$&a$
2100     t%= ' ->' INSTR a$                  : REMark is it a subdir?
2110     IF t% AND ddown%
2120       delete_files_with_extension ext$,a$(1 TO t%-1),ddown% : REMark yes, possibly drill down
2130       NEXT lp%
2140     END IF
2150     t%=LEN(a$)
2160     IF t%<exlen%:NEXT lp%               : REMark filename is shorter than extension
2170     IF a$(t%-exlen%+1 TO) ==ext$ : DELETE a$
2180   END REPeat lp%
2190   CLOSE#chan%
2200   DELETE myfile$
2210 END DEFine delete_files_with_extension
2220 :
