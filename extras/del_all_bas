1780 DEFine PROCedure read_datas (line_number)
1790 REMark this reads the datas as of the line number given as params
1800 REMark and puts them in the global array delete$
1810 LOCal lp%,a$
1820   DIM delete$(100,100)
1830   RESTORE line_number                   : REMark start reading from here
1840   PRINT "restoring : ";line_number
1850   FOR lp% = 0 TO 100
1860     READ a$                             : REMark get filename
1870     IF a$ ="":EXIT lp%                  : REMark finished
1880     delete$(lp%)="dev8_"&a$
1890   END FOR lp%
1900 END DEFine read_datas
1910 :
1920 DEFine PROCedure delete_files
1930 REMark delete all files held in delete$
1940 LOCal stop_here%,lp%
1950   stop_here%=DIMN(delete$,1)
1960   FOR lp%=0 TO stop_here%
1970     IF delete$(lp%)="":EXIT lp%
1980     DELETE delete$(lp%)
1990   END FOR lp%
2000 END DEFine delete_files
2010 :
2020 DEFine PROCedure sa
2030   SAVE_O dev8_extras_del_all_bas
2040 END DEFine sa
2050 :
2060 DEFine PROCedure delete_files_with_extension(ext$,mdir$,ddown%)
2070 REMark this deletes all files in the dir mdir$ with the extension ext$
2080 REMark possibly drilling down to all subirs(ddown%<>0) to do the same there
2090 REMark by calling itself recursively
2100 LOCal chan%,lp%,myfile$,a$,device$,t%,exlen%
2110   FOR lp%=1 TO 50
2120     myfile$="ram1_dele_extns"&RND(1 TO 80)&RND (1 TO 80) & RND (1 TO 50)
2130     chan%=FOP_OVER (myfile$)            : REMark try to open unique file
2140     IF chan%>0:EXIT lp%
2150   END FOR lp%
2160   IF chan%<0:RETurn                     : REMark ooops!!!!
2170   exlen%=LEN(ext$)
2180   device$=mdir$(1 TO 5)
2190   WDIR#chan%,mdir$                      : REMark dir of this rep in file
2200   GET#chan%\0                           : REMark reset file pointer to start
2210   REPeat lp%
2220     IF EOF(#chan%):EXIT lp%
2230     INPUT#chan%,a$                      : REMark get filename
2240     IF a$="":NEXT lp%
2250     a$=device$&a$
2260     t%= ' ->' INSTR a$                  : REMark is it a subdir?
2270     IF t% AND ddown%
2280       delete_files_with_extension ext$,a$(1 TO t%-1),ddown% : REMark yes, possibly drill down
2290       NEXT lp%
2300     END IF
2310     t%=LEN(a$)
2320     IF t%<exlen%:NEXT lp%               : REMark filename is shorter than extension
2330     IF a$(t%-exlen%+1 TO) ==ext$ : DELETE a$
2340   END REPeat lp%
2350   CLOSE#chan%
2360   DELETE myfile$
2370 END DEFine delete_files_with_extension
2380 :
