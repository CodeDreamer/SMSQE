; Atari Monochrome Display Mode Definitions	V2.01	 2000	Tony Tebby

	section driver

	xdef	pt.palql
	xdef	pt.pal256
	xdef	pt.spxlw
	xdef	pt.rpxlw
	xdef	pt.samsk

pt.palql equ	0	  ; size of QL palette
pt.pal256 equ	0	  ; size of 256 colour palette
pt.spxlw equ	5	  ; shift pixels to long word
pt.rpxlw equ	$1f	  ; round up pixels to long word
pt.samsk equ	$000f0000 ; xy save area origin mask

	end
