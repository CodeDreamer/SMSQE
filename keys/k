k.csf5   equ    $fffffffb
k.f6     equ    $ffffffea
k.cf6    equ    $ffffffeb
k.f7     equ    $ffffffee
k.cf7    equ    $ffffffef
k.f8     equ    $fffffff2
k.cf8    equ    $fffffff3
k.f9     equ    $fffffff6
k.sf9    equ    $fffffff7
k.f10    equ    $fffffffa
k.sf10   equ    $fffffffb

k.cmd    equ    k.f3
k.freez  equ    k.cf5

