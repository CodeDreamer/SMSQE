;       Xref macros
        nolist

xjsr    macro   name
        xref    [name]
        jsr     [name]
        endm

xjmp    macro   name
        xref    [name]
        jmp     [name]
        endm


xbsr    macro   name
        xref    [name]
        bsr     [name]
        endm

xlea    macro   name,reg
        xref    [name]
        lea     [name],[reg]
        endm

xbra    macro   name
        xref    [name]
        bra     [name]
        endm

xbeq    macro   name
        xref    [name]
        beq     [name]
        endm

xbne    macro   name
        xref    [name]
        bne     [name]
        endm

        list
